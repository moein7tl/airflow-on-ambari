<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration supports_final="true">
  <property>
    <name>uri</name>
    <value></value>
    <display-name>URI</display-name>
    <description>set this to ldaps://your.ldap.server:port.</description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>user_filter</name>
    <value>objectClass=*</value>
    <display-name>User filter</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>user_name_attr</name>
    <value>uid</value>
    <display-name>User name attr</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>group_member_attr</name>
    <value>memberOf</value>
    <display-name>Group member attr</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>superuser_filter</name>
    <value></value>
    <display-name>Superuser filter</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>data_profiler_filter</name>
    <value></value>
    <display-name>Data profiler filter</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>bind_user</name>
    <value>cn=Manager,dc=example,dc=com</value>
    <display-name>Bind user</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>bind_password</name>
    <value>insecure</value>
    <display-name>Bind password</display-name>
    <description></description>
    <value-attributes>
      <type>password</type>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>basedn</name>
    <value>dc=example,dc=com</value>
    <display-name>Basedn</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>cacert</name>
    <value>/etc/ca/ldap_ca.crt</value>
    <display-name>CA acert</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>search_scope</name>
    <value>LEVEL</value>
    <display-name>Search scope</display-name>
    <description></description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
  </property>
  <property>
    <name>ignore_malformed_schema</name>
    <value>False</value>
    <display-name>Ignore malformed schema</display-name>
    <description>This setting allows the use of LDAP servers that either return a broken schema, or do not return a schema.</description>
  </property>
</configuration>
